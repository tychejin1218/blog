<configuration>
  <!-- 콘솔에 로그 출력 -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!-- 로그 출력 패턴 설정 -->
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- HikariCP 로그 레벨 설정 -->
  <logger name="com.zaxxer.hikari" level="debug" />

  <!-- Root Logger 설정 -->
  <root level="infod">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>
